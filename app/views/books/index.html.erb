<h1>Books</h1>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-xs-6 col-sm-4 col-md-2">
      <% if book.cover %>
        <%= image_tag book.cover.url, class: "thumbnail" %>
      <% else %>
        <img src="covers/original/missing.png" alt="Missing Cover" class="thumbnail">
      <% end %>
      <div class="caption text-center">
        <h4>Author - Title</h4>
        <span class="btn-group"><%= link_to "View", book, class: "btn btn-primary" %><%= link_to "Edit", edit_book_path(book), class: "btn btn-default" %></span>
      </div>
    </div>
  <% end %>
</div>


  <%= link_to 'Add Book', new_book_path, class: "btn btn-success" %>
